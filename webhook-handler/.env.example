# Server Configuration
PORT=3000
NODE_ENV=development

# Demo Platform Configuration
DEMO_PLATFORM_API_URL=https://api.demo.okta.com
DEMO_PLATFORM_API_TOKEN=your-platform-api-token-here
COMPONENT_SECRET=your-webhook-secret-here

# GitHub Configuration
# Option 1: Personal Access Token (simpler for POC)
GITHUB_TOKEN=ghp_your_github_personal_access_token_here

# Option 2: GitHub App (recommended for production)
# GITHUB_APP_ID=123456
# GITHUB_APP_PRIVATE_KEY_PATH=./config/github-app-private-key.pem
# GITHUB_INSTALLATION_ID=12345678

# Template Configuration
GITHUB_TEMPLATE_OWNER=joevanhorn
GITHUB_TEMPLATE_REPO=okta-terraform-demo-template
GITHUB_BOT_USERNAME=demo-engineering-bot

# Feature Flags
ENABLE_AUTO_IMPORT=true
ENABLE_COLLABORATOR_INVITE=true
DEFAULT_REPO_VISIBILITY=private

# Logging
LOG_LEVEL=info
